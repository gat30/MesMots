<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgbook"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/synchronizeSuggestonLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/synchronizeSuggestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:text="@string/LABEL_SYNCHRONIZE"
            android:textColor="#000000"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/suggestionSynchronizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/LABEL_SYNCHRONIZE" >
    </Button>

    <LinearLayout
        android:id="@+id/synchronizeLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/synchronizeSuggestionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>