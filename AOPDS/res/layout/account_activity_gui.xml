<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" 
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:weightSum="1" 
  android:orientation="vertical">
  
  <TextView 
      android:layout_width="wrap_content" 
      android:id="@+id/accountMyAccountLabel" 
      android:text="@string/LABEL_MY_ACCOUNT" 
      android:textSize="18sp" 
      android:layout_marginLeft="20dip" 
      android:layout_marginTop="5dip" 
      android:layout_height="wrap_content">
  </TextView>
  
  <LinearLayout 
      android:id="@+id/accountFirstNameLinearLayout" 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content"
      android:layout_marginTop="40dip">
      
        <TextView 
            android:visibility="gone" 
            android:layout_height="wrap_content" 
            android:id="@+id/accountActivityErrorLabel" 
            android:textColor="#FF0000" android:text="" 
            android:layout_width="wrap_content" 
            android:layout_marginLeft="15dip" 
            android:layout_marginTop="2dip">
        </TextView>
        
        <TextView android:id="@+id/accountFirstNameLabel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/LABEL_FIRST_NAME">
        </TextView>
        <EditText 
            android:inputType="textPersonName"
            android:layout_height="wrap_content" 
            android:layout_width="match_parent" 
            android:id="@+id/accountFirstNameTextBox">
        </EditText>
   </LinearLayout>
   
   <LinearLayout 
       android:id="@+id/accountLastNameLinearLayout" 
       android:layout_width="match_parent" 
       android:layout_height="wrap_content" 
       android:layout_marginTop="0dip">
        
        <TextView 
            android:id="@+id/accountLastNameLabel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/LABEL_LAST_NAME">
        </TextView>
        <EditText 
            android:inputType="textPersonName"
            android:layout_height="wrap_content" 
            android:id="@+id/accountLastNameTextBox" 
            android:layout_width="match_parent">
        </EditText>
   </LinearLayout>
   
   <LinearLayout 
       android:id="@+id/accountEMailLinearLayout" 
       android:layout_width="match_parent" 
       android:layout_height="wrap_content" 
       android:layout_marginTop="5dip">
        
        <TextView 
            android:id="@+id/accountEMailLabel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/LABEL_YOUR_EMAIL_ADDRESS">
        </TextView>
   </LinearLayout>
   
   <EditText 
       android:inputType="textEmailAddress"
       android:layout_width="match_parent" 
       android:layout_height="wrap_content" 
       android:id="@+id/accountEMailTextBox">
       <requestFocus></requestFocus>
   </EditText>
   
   <LinearLayout 
       android:layout_width="match_parent" 
       android:layout_marginTop="0dip" 
       android:id="@+id/accountPasswordsLinearLayout" 
       android:layout_height="wrap_content" 
       android:orientation="vertical">
       
       <TextView 
           android:id="@+id/accountPasswordLabel" 
           android:layout_width="wrap_content" 
           android:text="@string/LABEL_PASSWORD" 
           android:layout_height="wrap_content">
       </TextView>
       
       <EditText 
           android:inputType="textPassword" 
           android:layout_weight="1" 
           android:layout_width="match_parent" 
           android:id="@+id/accountPasswordTextBox" 
           android:layout_height="wrap_content">
       </EditText>
       
       <TextView 
           android:id="@+id/accountNewPasswordLabel" 
           android:layout_width="wrap_content" 
           android:text="@string/LABEL_NEW_PASSWORD" 
           android:layout_height="wrap_content">
       </TextView>
       
       <EditText 
           android:inputType="textPassword" 
           android:layout_weight="1" 
           android:layout_width="match_parent" 
           android:id="@+id/accountNewPasswordTextBox" 
           android:layout_height="wrap_content">
       </EditText>
       
       <TextView 
           android:id="@+id/accountNewPasswordConfLabel" 
           android:layout_width="wrap_content"
           android:text="@string/LABEL_NEW_PASSWORD_CONF" 
           android:layout_height="wrap_content">
       </TextView>
       
       <EditText 
           android:inputType="textPassword" 
           android:id="@+id/accountNewPasswordConfTextBox" 
           android:layout_weight="1" 
           android:layout_width="match_parent" 
           android:layout_height="wrap_content">
           </EditText>
           
   </LinearLayout>
   
   <LinearLayout 
       android:id="@+id/accountButtonsLinearLayout" 
       android:layout_width="match_parent" 
       android:layout_height="wrap_content" 
       android:layout_marginTop="5dip" 
       android:weightSum="1">
   
   		<Button 
   		    android:id="@+id/AccountUpdateButton" 
   		    android:layout_width="160dp" 
   		    android:layout_height="wrap_content" 
   		    android:text="@string/LABEL_UPDATE">
   		</Button>
   		
   		<Button 
   		    android:id="@+id/AccountLogoutButton" 
   		    android:layout_height="wrap_content" 
   		    android:text="@string/LABEL_LOGOUT" 
   		    android:layout_width="160dp">
   		</Button>
   </LinearLayout>
</LinearLayout>
